{
    "compilerOptions": {  
      "baseUrl": "./",
      "paths": {
        "src/*": ["src/*"],
        "tests/*": ["tests/*"]
      },
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "typeRoots": ["./node_modules/@types"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": false,
      "sourceMap": false,
      "moduleResolution": "node",
      "types": ["node", "jest"],
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".vscode"],
}